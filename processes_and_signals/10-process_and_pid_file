#!/usr/bin/env bash
# Task 9

rmfile ()
{
		rm -f /var/run/myscript.pid; exit 
	}

echo $$ >> /var/run/myscript.pid

trap ' echo "Y U no love me/!" ' 2

trap ' echo "I heat the kill command"; rmfile ' 15 

trap ' echo "I heat the kill command"; rmfile ' 3

while true; 
do
	echo " To infinity and beyond "
	sleep 2
done
